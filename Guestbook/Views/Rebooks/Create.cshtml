@model Guestbook.Models.Rebook

@{
    Layout = null;
}

<h2 class="text-center">★我要留言★</h2>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="RebookID" value="@Guid.NewGuid()" />

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

             <input asp-for="BookID" class ="form-control" value=@ViewBag.BookID/>
            
            <div class="form-group mt-4">
                <div class="d-grid gap-2">
                    <input type="button" onclick="addReBook()" value="確定回覆" class="btn btn-outline-primary" />
				</div>
            </div>
        </form>
    </div>
</div>
