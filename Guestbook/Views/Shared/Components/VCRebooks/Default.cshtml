@model IEnumerable<Guestbook.Models.Rebook>

@{
    Layout = null;
}
@if(Model.Count() == 0)
{
    <h3 class="text-black-50 text-center">目前無回覆</h3>
}
else
{
    <h3 class="text-lg-center">所有回覆</h3>

    <div class="border border-1 rounded p-3 bg-light" >
    @foreach(var item in Model)
    {
        <p>@Html.DisplayFor(modelItem => item.Description)</p>
        <p class="text-end">@Html.DisplayFor(modelItem => item.Author) 於 @Html.DisplayFor(modelItem => item.CreateDate)回覆</p>
        <hr />
    }
	    </div>
}
